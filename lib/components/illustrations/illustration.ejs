<%
    /**
    * @required {string} type
    * @required {string} illustration
    */
    const props = {
        type: typeof type !== 'undefined' ? type : 'illustration',
        illustration: illustration,
    }

    function validate( props ) {
        if ( ! [ 'illustration', 'scene', 'micro' ].includes( props.type ) ) {
            throw new Error( `The type ${props.type} doesn't exists` )
        }
        if (
            ( 'illustration'.includes( props.type ) && ( ! [ 'boy', 'classic-house', 'couple', 'edifice', 'girl', 'leaf-1', 'leaf-2', 'leaf-3', 'leaf-4', 'man', 'man-resting', 'man-resting-scene', 'man-working', 'modern-house', 'scenery', 'skyscraper', 'woman', 'work-table' ].includes( props.illustration ) ) )
                ||
            ( 'micro'.includes( props.type ) && ( ! [ '1-circle', 'awards-circle', 'check-circle', 'component-circle', 'google-circle', 'image-circle', 'interaction-circle', 'legal-circle', 'museum-circle', 'paint-circle', 'pencil-circle', 'people', 'premium-circle', 'purse-circle', 'responsive-circle', 'saving-circle', 'secure-circle', 'transfer-circle' ].includes( props.illustration ) ) )
                ||
            ( 'scene'.includes( props.type ) && ( ! [ 'alert', 'avatar', 'bottle', 'boy', 'b-system', 'choose-template', 'consistency', 'dangerous', 'efficiency', 'fonts', 'girl', 'home-classic', 'home-modern', 'ideation', 'image', 'info', 'leaf-1', 'leaf-2', 'learn', 'man', 'organized', 'process', 'responsive', 'sales', 'system', 'system-module', 'templates', 'testimonial', 'tools', 'woman' ].includes( props.illustration ) ) )
        ) {
            throw new Error( `The illustration ${props.illustration} doesn't exists` )
        }
    }
    validate( props )
%>

<figure>
    <img src="<%=image%>/<%= props.type %>s/<%= props.illustration %>.svg">
</figure>
