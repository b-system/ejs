<% 

const props = {
    titleBusiness: typeof titleBusiness !== 'undefined' ? titleBusiness : null,
    subtitle: typeof subtitle !== 'undefined' ? subtitle : null,
    icon: typeof icon !== 'undefined' ? icon : null,
    logo: typeof logo !== 'undefined' ? logo : null,
    logoAlt: typeof logoAlt !== 'undefined' ? logoAlt : null,
    date: typeof date !== 'undefined' ? date : null,
    hrefCard: typeof hrefCard !== 'undefined' ? hrefCard : '#',
    labelLink: typeof labelLink !== 'undefined' ? labelLink : null,
    iconLink: typeof iconLink !== 'undefined' ? iconLink : null,
}

%>

<div class="business-card bg-card full-card interaction-card d-flex flex-column justify-content-between inner-space-block-24 inner-space-inline-24">
    <div class="d-flex flex-wrap justify-content-between header-card d-flex justify-content-between">
        <% if(props.titleBusiness) { %>
        <p class="body-light-gray-text fw-bold"><%- props.titleBusiness -%></p>
        <% }
        if(props.icon) { %>
        <%- include(`${component}/icons/icon`, {icon: props.icon}) %>
        <% }
        if(props.subtitle) { %>
        <p class="body-light-gray-text w-100"><%- props.subtitle -%></p>
        <% } %>
    </div>
    <div class="d-flex justify-content-center">
        <img class="img-basic" src="<%= `${image}/${props.logo}` %>" alt="<%- props.logoAlt -%>">
    </div>
    <div class="d-flex justify-content-between">
        <% if(props.date) { %>
        <p class="body-light-gray-text"><%- props.date -%></p>
        <% } 
        if(props.labelLink) { %>
        <%- include( `${component}/links/link`, {
            href: props.hrefCard,
            label: props.labelLink,
            icon: props.iconLink,
        } ) %>
        <% } %>
    </div>
</div>