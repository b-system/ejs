<% 

const props = {
    textHeader: typeof textHeader !== 'undefined' ? textHeader : null,
    titleProject: typeof titleProject !== 'undefined' ? titleProject : null,
    hrefCard: typeof hrefCard !== 'undefined' ? hrefCard : null,
    labelLink: typeof labelLink !== 'undefined' ? labelLink : null,
    iconLink: typeof iconLink !== 'undefined' ? iconLink : 'links',
}

%>

<div class="bg-card d-grid grid-3 gap-0 project-card w-100 h-100 inner-space-inline-24">
    <div class="col-1-to-4 col-md-1-to-2 header-card d-flex align-items-center justify-content-center">
        <p class="header-text fw-bold text-md-center w-100"><%- props.textHeader -%></p>
    </div>
    <div class="col-1-to-4 col-md-2-to-4 project-info d-flex align-items-center inner-space-block-md-24 inner-space-bottom-24 inner-space-left-md-72 inner-space-left-xl-32 inner-space-left-xxl-72 inner-space-right-md-32">
        <div class="space-y-16 inner-space-right-md-32 inner-space-right-xxl-72">
            <h3><%- props.titleProject -%></h3>
            <% if(props.labelLink) { %>
                <%- include( `${component}/links/link`, {
                    href: props.hrefCard,
                    label: props.labelLink,
                    icon: props.iconLink,
                } ) %>
            <% } %>
        </div>
    </div>
</div>