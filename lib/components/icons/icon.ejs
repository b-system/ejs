<%
const ICON_VARIANTS = {
    OUTLINE: 'outline',
    FILLED: 'filled',
    CIRCLE: 'circle'
}

/**
 * @required {string} icon
 */
const props = {
    icon: icon,
    variant: typeof variant !== 'undefined' ? variant : ICON_VARIANTS.OUTLINE
}

function validate(props) {
    if (!Object.values(ICON_VARIANTS)
            .includes(props.variant)) {
        throw new Error(`The icon variant: ${props.variant} doesn't exist`)
    }
}

const styles = {
  icon: {
    toString:()=>{
      const prefix = 'icon-'
        return ICON_VARIANTS.OUTLINE === props.variant?`${prefix}${props.icon}`:`${prefix}${props.icon}-${props.variant}`
    }
  }
}
%>

<i class="<%- styles.icon -%>"></i>
