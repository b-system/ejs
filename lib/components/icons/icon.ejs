<%
const ICON_VARIANTS = {
    OUTLINE: 'outline',
    FILLED: 'filled',
    CIRCLE: 'circle'
}

/**
 * @required {string} icon
 */
const props = {
    icon: icon,
    iconVariant: typeof iconVariant !== 'undefined' ? iconVariant : ICON_VARIANTS.OUTLINE,
    size: typeof size !== 'undefined' ? size : 0,
}


const styles = {
    icon: {
        toString: () => {
            const prefix = 'icon-'
            return ICON_VARIANTS.OUTLINE === props.iconVariant ? `${prefix}${props.icon}` : `${prefix}${props.icon}-${props.iconVariant}`
        }
    },
    size: {
        toString: () => {
            return props.size ? `--size: ${props.size / 16}rem` : '';
        }
    }
}
%>

<i class="<%- styles.icon -%>" <%- props.size > 0 ? `style="${styles.size}"` : '' %>></i>
