<%
    /**
     * @required {string} type
     * @required {string} id
     */
    const props = {
        type: type,
        id: id,
        label: typeof label !== 'undefined' ? label : '',
		checked: typeof checked !== 'undefined' ? 'checked' : '',
        css_wrapper: typeof css_wrapper !== 'undefined' ? css_wrapper : '',
        css_input: typeof css_input !== 'undefined' ? css_input : '',
        css_label: typeof css_label !== 'undefined' ? css_label : '',
    }

    function validate( props ) {
        if ( ! [ 'checkbox', 'radio' ].includes( props.type ) ) {
            throw new Error( `The variant ${props.type} doesn't exists` )
        }
    }
    validate( props )
%>

<div class="form-check <%= props.css_wrapper %>">

    <input class="form-check-input <%= props.css_input %>" type="<%= props.type %>" id="<%= props.id %>"
        <% if ( 'checkbox' === props.type ) { %>
            value="<%= props.id %>"
        <% } %>
        <% if ( 'radio'  === props.type ) { %>
            name="<%= props.id %>"
        <% } %>
        <%= props.checked %>
    >

    <label class="form-check-label <%= props.css_label %>" for="<%= props.id %>">
        <%= props.label %>
    </label>

</div>
