<%
    /**
    * @required {array} items
    */

    const props = {
        items: items,
        ariaLabel: typeof ariaLabel !== 'undefined' ? ariaLabel : '',
    }

    function validate( props ) {
        const keys = props.items.map( ( item ) => Object.keys( item ).filter( ( key ) => ! [ 'label', 'value', 'selected' ].includes( key ) ) ).flat()
        if ( 0 < keys.length ) {
            throw new Error( `The "${keys.join(', ')}" key/s is/are invalid` )
        }
    }
    validate( props )
%>

<select class="form-select" aria-label="<%= props.ariaLabel %>">
    <% props.items.forEach( ( item ) => { %>
        <%- include( `${component}/forms/option`, { ...item } )%>
    <% } ) %>
</select>
