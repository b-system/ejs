<%
/**
 * @required { src:String, alt:String } img
 */

    const props = {
        item,
        index
    }


%>

<div class="item-wrapper item-<%-props.index-%>">
    <picture class="decomposed-container-img">
        <img class="decomposed-img img-mode-light" src="<%- `${image}/portfolio/decomposed/${props.item.img.src}.jpg` -%>" alt="<%- props.item.img.alt -%>">
        <img class="decomposed-img img-mode-dark" src="<%- `${image}/portfolio/decomposed/${props.item.img.src}_darkmode.jpg` -%>" alt="<%- props.item.img.alt -%>">
    </picture>
    <div class="item-info">
        <!-- TODO: Sustituir por props.item.title  -->
        <span class="item-title body-regular-gray-text"><%-props.item.title-%></span>
        <span class="item-subtitle body-light-gray-text"><%-props.item.subtitle-%></span>
    </div>
</div>