<%
const props = {
    target,
    effect,
    next: typeof next !== 'undefined' ? next : '',
    prev: typeof prev !== 'undefined' ? prev : '',
    pagination: typeof pagination !== 'undefined' ? pagination : ''
}

const attrs = {
    swiper: {
        toString: () => {
            var dataAttrs = `data-swiper-target="${props.target}" data-swiper-effect="${props.effect}"`
            dataAttrs = props.next ? `${dataAttrs} data-swiper-next="${props.next}"` : dataAttrs
            dataAttrs = props.prev ? `${dataAttrs} data-swiper-prev="${props.prev}"` : dataAttrs
            dataAttrs = props.pagination ? `${dataAttrs} data-swiper-pagination="${props.pagination}"` : dataAttrs

            return dataAttrs
        }
    }
}
%>

<div class="swiper" data-bsystem="swiper" <%- attrs.swiper -%>>
    <div class="swiper-wrapper">
        <!-- swiper slide -->