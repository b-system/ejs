<%
const props = {
    target,
    effect: typeof effect !== 'undefined' ? effect : '',
    next: typeof next !== 'undefined' ? next : '',
    prev: typeof prev !== 'undefined' ? prev : '',
    items: typeof items !== 'undefined' ? items : 1,
    loop: typeof loop !== 'undefined' ? loop : false,
    space: typeof space !== 'undefined' ? space : false
}

const attrs = {
    swiper: {
        toString: () => {
            var dataAttrs = `data-swiper-target="${props.target}"`
            dataAttrs = props.effect ? `${dataAttrs} data-swiper-effect="${props.effect}"` : dataAttrs
            dataAttrs = props.next ? `${dataAttrs} data-swiper-next="${props.next}"` : dataAttrs
            dataAttrs = props.prev ? `${dataAttrs} data-swiper-prev="${props.prev}"` : dataAttrs
            dataAttrs = props.loop ? `${dataAttrs} data-swiper-loop="${props.loop}"` : dataAttrs
            dataAttrs = false !== props.space ? `${dataAttrs} data-swiper-space="${props.space}"` : dataAttrs

            if (props.items && typeof props.items == 'number') {
                dataAttrs = `${dataAttrs} data-swiper-items="${props.items}"`
            } else if (props.items) {
                dataAttrs = props.items.xxl ?`${dataAttrs} data-swiper-item-xxl="${props.items.xxl}"`: dataAttrs
                dataAttrs = props.items.xl ? `${dataAttrs} data-swiper-item-xl="${props.items.xl}"`: dataAttrs
                dataAttrs = props.items.lg ? `${dataAttrs} data-swiper-item-lg="${props.items.lg}"`: dataAttrs
                dataAttrs = props.items.md ? `${dataAttrs} data-swiper-item-md="${props.items.md}"`: dataAttrs
                dataAttrs = props.items.sm ? `${dataAttrs} data-swiper-item-sm="${props.items.sm}"`: dataAttrs
                dataAttrs = props.items.xs ? `${dataAttrs} data-swiper-item-xs="${props.items.xs}"`: dataAttrs
            }


            return dataAttrs
        }
    }
}
%>

<div class="swiper" data-b-system="swiper" <%- attrs.swiper -%>>
    <div class="swiper-wrapper">
        <!-- swiper slide -->