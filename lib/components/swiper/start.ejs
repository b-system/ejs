<%
const props = {
    target,
    effect: typeof effect !== 'undefined' ? effect : '',
    next: typeof next !== 'undefined' ? next : '',
    prev: typeof prev !== 'undefined' ? prev : '',
    items: typeof items !== 'undefined' ? items : 1
}

const attrs = {
    swiper: {
        toString: () => {
            var dataAttrs = `data-swiper-target="${props.target}"`
            dataAttrs = props.effect ? `${dataAttrs} data-swiper-effect="${props.effect}"` : dataAttrs
            dataAttrs = props.next ? `${dataAttrs} data-swiper-next="${props.next}"` : dataAttrs
            dataAttrs = props.prev ? `${dataAttrs} data-swiper-prev="${props.prev}"` : dataAttrs
            dataAttrs = props.items ? `${dataAttrs} data-swiper-items="${props.items}"` : dataAttrs

            return dataAttrs
        }
    }
}
%>

<div class="swiper" data-bsystem="swiper" <%- attrs.swiper -%>>
    <div class="swiper-wrapper">
        <!-- swiper slide -->