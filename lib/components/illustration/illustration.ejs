<%
/**
 * @required { src:String, size:String, alt:String, width:String, height:String } img
 */

const props = {
    img: img
}
const attrs = {
  style: {
    toString:()=> {
      return props.img.width && props.img.height ? `style="width: ${ props.img.width}; height: ${ props.img.height}"`:''
    }
  }
}
%>

<picture class="illustration" <%- attrs.style -%>>
    <img class="illustration-img" src="<%- `${image}/${props.img.size}/${props.img.src}.svg` -%>"
         alt="<%- props.img.alt -%>">
</picture>
