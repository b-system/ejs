<%
    /**
    * @required {string} id
    */

    const props = {
        id: id,
        label: typeof label !== 'undefined' ? label : '',
    }
%>

<div class="form-check form-switch">
    <input class="form-check-input bg-transition" type="checkbox" id="<%= props.id %>">
    <% if ( '' !== props.label ) { %>
        <label class="form-check-label" for="<%= props.id %>"><%= props.label %></label>
    <% } %>
</div>
