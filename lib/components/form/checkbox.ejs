<%
/**
 * @requires {string} id
 * @requires {string} label
 */
const props = {
    id,
    label,
    checked: typeof checked !== 'undefined' ? checked : false
}

const attr = {
    checked: {
        toString: () => {
            return props.checked ? 'checked' : ''
        }
    }
}
%>

<div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="<%- props.id -%>" <%- attr.checked -%>>
    <%- include(`${component}/icons/icon`, { icon: 'done' } ) %>
    <label class="form-check-label" for="<%- props.id -%>">
        <%- props.label -%>
    </label>
</div>
