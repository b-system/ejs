<%
/**
 * @required {src:String, alt:String } img
 * @required {src:String, alt:String } background
 */
    const props = {
        id: typeof id !== 'undefined' ? id : null,
        img: img,
        background: background,
        columns: typeof columns !== 'undefined' ? columns : [],
        isDarkened: typeof isDarkened !== 'undefined' ? isDarkened : false,
        isDark: typeof isDark !== 'undefined' ? isDark : false,
        hasBorder: typeof hasBorder !== 'undefined' ? hasBorder : false,
    }

    const styles = {
        statistic: {
            darkened: {
                toString: () => (props.isDarkened ? 'darkened' : '')
            },
            dark: {
            toString: () => (props.isDark ? 'data-b-system-theme="dark"' : '')
            },
            border: {
            toString: () => (props.hasBorder ? 'section-divider' : '')
            }
        }
    }
%>

<div class="section-statistic module <%- styles.statistic.border -%> <%- styles.statistic.darkened -%> position-relative" id="<%- props.id -%>" <%- styles.statistic.dark -%>>
    <picture>
        <% if(props.background.src) { %>
            <img class="statistic-background img-background" src="<%- `${image}/${props.background.src}.jpg` -%>" alt="<%- props.background.alt -%>">
        <% }
        if(props.background.srcDark) { %>
            <img class="statistic-background statistic-background-dark img-background" src="<%- `${image}/${props.background.srcDark}.jpg` -%>" alt="<%- props.background.alt -%>">
        <% } %>
    </picture>
    <div class="container statistic d-grid grid-4 grid-md-8 grid-xl-12">
        <picture class="statistic-img-container col-span-5 col-md-3-to-7 col-span-xl-5 d-flex align-items-center">
            <img class="statistic-img w-100" src="<%- `${image}/${props.img.src}.png` -%>" alt="<%- props.img.alt -%>">
        </picture>
        <div class="statistic-content col-span-4 col-span-md-8 col-xl-7-to-13 d-grid grid-2 row-gap-48">
            <% if(props.columns.length <= 4 && props.columns.length > 0) {
            props.columns.forEach((column)=> { %>
                <div class="statistic-column col-span-2 col-span-md-1 space-y-24">
                    <h1 class="statistic-data"><%- column.data -%></h1>
                    <h4 class="statistic-title"><%- column.title -%></h4>
                    <p class="statistic-text statistic-background-text body-light-text"><%- column.text -%></p>
                    <%- include( `${component}/links/link`, {
                        href: column.link.href,
                        label: column.link.label,
                        icon: column.link.icon,
                        iconPosition: column.link.iconPosition
                    } )%>
                </div>
            <% }) 
            } %>
        </div>
    </div>
</div>