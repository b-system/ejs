<%

const props = {
    id: typeof id !== 'undefined' ? id : null,
    slides: typeof slides != 'undefined' ? slides : [],
    isDark: typeof isDark != 'undefined' ? isDark : false,
}

const attrs = {
    dark: {
        toString: () => {
            return props.isDark ? 'data-b-system-theme="dark"' : ''
        }
    }
}

%>

<div class="marquee-wrapper position-relative" id="<%- props.id -%>" <%- attrs.dark -%>>
    <%- include( `${component}/swiper/start`,
    {
    target: 'marquee-text-image',
    next: '.button-next',
    prev: '.button-prev'
    }
    ) %>

    <% props.slides.forEach((slide)=> { %>
        <div class="swiper-slide">
            <%- include(`${module}/marquee/textImage/textImageSlideContent`, {slide}) %>
        </div>
    <% }) %>

    <%- include( `${component}/swiper/end`) %>


    <div class="marquee-content-bottom">
        <%- include(`${component}/interaction/interaction-button`, { isRounded: true, isTight: true, icon: 'links' }) %>
    </div>
    <div class="marquee-slider-control">
        <div class="button-prev">
            <%- include(`${component}/interaction/interaction-button`, { isRounded: true, icon: 'back' }) %>
        </div>
        <div class="button-next">
            <%- include(`${component}/interaction/interaction-button`, { isRounded: true, icon: 'next' }) %>
        </div>
    </div>
</div>