<%
    const props = {
        slide
    }

    function validate(props) {
        const VARIANTS = ['basic', 'product', 'extended', 'image']
        if (!VARIANTS.includes(props.slide.cardStyle)) {
            throw new Error(`The variant ${props.slide.cardStyle} doesn't exists`)
        }
    }
%>

<%- include(`${component}/productCards/${slide.cardStyle}`, {
    img: {
        src: slide.img.src, 
        alt: slide.img.alt
    },
    name: slide.name,
    price: slide.price,
    link: {
        href: slide.link.href,
        label: slide.link.label,
        icon: slide.link.icon,
    },
    colors: slide.colors,
    isDarkened: slide.isDarkened,
    isRounded: slide.isRounded
}) %>