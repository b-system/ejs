<%
/**
 * @required {src:String, alt:String } img
 * @required {href:String, label:String, icon:String } link
 */

    const props = {
        category: typeof category !== 'undefined' ? category : null,
        title: typeof title !== 'undefined' ? title : null,
        text: typeof text !== 'undefined' ? text : null,
        link: link,
        img: img,
        imgPosition: typeof imgPosition !== 'undefined' ? imgPosition : 'before',
        isDarkened: typeof isDarkened !== 'undefined' ? isDarkened : false,
        isDark: typeof isDark !== 'undefined' ? isDark : false
    }

    function validate(props) {
    const positions = ['after', 'before']

    if (!positions.includes(props.imgPosition)) {
        throw new Error(`The variant ${props.imgPosition} doesn't exists`)
    }
}
validate(props)

    const styles = {
        basicGrid: {
            position: {
                toString: () => (props.imgPosition !== 'before' ? 'flex-xl-row-reverse' : 'flex-xl-row')
            },
            darkened: {
                toString: () => (props.isDarkened ? 'darkened' : '')
            },
            dark: {
            toString: () => (props.isDark ? 'data-bsystem="dark"' : '')
            }
        }
    }
%>

<section class="section-basic-grid section section-divider d-flex flex-column  px-0 <%-  styles.basicGrid.position -%> <%-  styles.basicGrid.darkened -%>" <%- styles.basicGrid.dark -%>>
    <picture class="basic-grid-img-container w-100">
        <img class="basic-grid-img w-100" src="<%- `${image}/${props.img.src}` -%>" alt="<%- props.img.alt -%>">
    </picture>
    <div class="basic-grid container row inner-space-inline-16 inner-space-inline-md-80 inner-space-block-48 inner-spaceblock-md-88 mx-auto">
        <div class="d-flex flex-column justify-content-center col-12 col-xl-8 col-xxl-6 offset-xl-2 offset-xxl-3">
            <p class="basic-grid-category basic-grid-text space-bottom-16 space-bottom-md-32"><%- props.category -%></p>
            <h2 class="basic-grid-title space-bottom-24 space-bottom-md-32"><%- props.title -%></h2>
            <p class="basic-grid-text body-light-gray-text space-bottom-32"><%- props.text -%></p>
            <%- include( `${component}/links/link`, {
                href: props.link.href,
                label: props.link.label,
                icon: props.link.icon,
            } ) %>
        </div>
    </div>
</section>