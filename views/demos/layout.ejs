<%- contentFor('styles') %>
.modules_dropdown_menu.show {
display: grid;
grid-template-columns: repeat(4, 225px);
gap: 24px;
}
.modules_dropdown_menu .group > *:not(:last-child) {
margin-bottom: 16px;
}

<%- contentFor('header') %>
<%
const headerConfig = {
    items: navigation,
    justify: 'right',
    size: 'full',
    isSticky: true,
    hasBackground: false,
    hasLightNav: true,
    buttons: [
        {
            label: 'Purchase B_system',
            mobileIcon: 'cart',
            variant: 'glass'
        }
    ]
}
%>


<%- include(`${component}/header/header`, { ...headerConfig, logo: 'light' }) %>


<%- contentFor('footer') %>
<%- include(`${component}/footer/basic`, {
img: {src: 'logo-dark-gray.svg', alt: 'logo'},
text:'Massive Multipurpose HTML5 Template + Organic Design System. Â© 2022 B_system. All rights reserved. Customer Service: info@iteratika.studio',
isDarkened: true,
}) %>

<%- contentFor('script') %>
    const header = document.querySelector('header.header')
    header.addEventListener(b_system.$EVENTS.ON_TRANSPARENT_HEADER_CHANGE_BACKGROUND, (e) => {
        const isBodyDark = !!document.querySelector('body[data-bsystem="dark"]')
        const img = document.querySelector('header img.logo')
        const purchaseButton = document.querySelector('header button.btn.btn-fit')
        const nav = document.querySelector('header nav.navbar > ul')
        if (e.detail.isTransparent) {
            if (!isBodyDark) {
                img.src = '/assets/img/logo-light.svg'
                nav.classList.add('light-nav')
            }
            purchaseButton.classList.remove('btn-primary')
            purchaseButton.classList.add('btn-glass')
        } else {
            if (!isBodyDark) {
                img.src = '/assets/img/logo-dark.svg'
                header.removeAttribute('data-bsystem')
                nav.classList.remove('light-nav')
            }
            purchaseButton.classList.remove('btn-glass')
            purchaseButton.classList.add('btn-primary')

        }
    })
