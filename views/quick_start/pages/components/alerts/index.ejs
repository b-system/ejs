<%- include(`${view}/quick_start/layout`)%>

<%- contentFor('body') %>

<section class="section">
    <div class="container gap-5">
        <h3>Alerts</h3>
    </div>
    <div class="container gap-5">
        <div class="row">
            <div class="col mb-5">
                <%- include(`${component}/alert/alert`, { label: 'You must include at least one letter.', icon: 'lock', variant: 'info' }) %>
                <span class="label">
                    Info alert
                </span>
            </div>
            <div class="col mb-5">
                <%- include(`${component}/alert/alert`, { label: 'The data you have entered is already in our system.', icon: 'error', variant: 'error' }) %>
                <span class="label">
                    Error alert
                </span>
            </div>
            <div class="col mb-5">
                <%- include(`${component}/alert/alert`, { label: 'Your data is safe with B System. In no case may they be published.', icon: 'avatar', variant: 'advice' }) %>
                <span class="label">
                    Advice alert
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col mb-5">
                <%- include(`${component}/alert/alert`, { label: 'You can also write an email to these departments and we will get back to you as soon as possible: bsystem@company.com.', icon: 'message', variant: 'primary' }) %>
                <span class="label">
                    Alert
                </span>
            </div>
            <div class="col mb-5">
                <%- include(`${component}/alert/alert`, { label: 'Find our offices easily in our search engine.', icon: 'place-holder', variant: 'link', href:"#" }) %>
                <span class="label">
                    Link alert
                </span>
            </div>
            <div class="col mb-5">

            </div>
        </div>

    </div>
</section>

