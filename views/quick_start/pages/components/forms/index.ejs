<%- include(`${view}/quick_start/layout`)%>

<%- contentFor('body') %>

<section class="section">

    <h2 class="container">Form elements</h2>

    <div class="container d-flex flex-wrap gap-5">


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/input`, {
                type: 'text',
                id: 'input-text-id-01',
                label: 'Name',
                // icon: 'icon',
                // isRequired: true,
                }) %>

            <span class="label">
                Input states
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/input`, {
                type: 'password',
                id: 'input-text-id-02',
                label: 'Password',
                icon: 'eye',
                // isRequired: true,
                }) %>

            <span class="label">
                Input states
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/input`, {
                type: 'text',
                id: 'input-text-id-03',
                label: 'Search',
                icon: 'magnifying-glass',
                // isRequired: true,
                }) %>

            <span class="label">
                Input states
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%
            const select_items = [
                { label:'Open this select menu', value:'', selected: 'selected' },
                { label:'One', value:'1' },
                { label:'Two', value:'2' },
                { label:'Three', value:'3' }
            ]
            %>

            <%- include(`${component}/forms/select`, {
                items: select_items,
				ariaLabel: 'Default select example',
                }) %>

            <span class="label">
                Dropdown states
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/checkbox-radio`, {
                type: 'checkbox',
                id: 'checkbox-custom-id-01',
                label: 'I accept the treatment of my data.',
                // isChecked: true,
                }) %>

            <span class="label">
                Check states
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/checkbox-radio`, {
                type: 'radio',
                id: 'radio-custom-id-01',
                label: 'I choose the premium level.',
                // isChecked: true,
                }) %>

            <span class="label">
                Radio states
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/info`, {
                label: 'Gift cards cannot be used to pay cash.',
                }) %>

            <span class="label">
                Info
            </span>
        </div>


        <div class="d-flex flex-column gap-2">

            <%- include(`${component}/forms/info`, {
                label: 'Gift cards cannot be used to pay cash.',
                href: '#',
                }) %>

            <span class="label">
                Info and link
            </span>
        </div>


    </div>
</section>


